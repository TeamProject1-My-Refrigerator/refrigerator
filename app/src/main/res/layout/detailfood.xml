<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:layout_weight="1" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnfoodchange"
            android:text="재료수정"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_blue" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnfoodsub"
            android:text="재료삭제"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/line"
        android:layout_weight="3" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_image"
            android:scaleType="fitXY"
            android:background="#FFFFFF"

            android:layout_marginBottom="1dp"
            android:src="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/line"
        android:orientation="vertical"
        android:layout_weight="1" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_name"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="8dp"
            android:text="food_name" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_name_change"
            android:text="edittext"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:visibility="gone" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/line"
        android:orientation="horizontal"
        android:layout_weight="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/food_date"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="유통기한" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="입고날짜"
            android:id="@+id/food_indate" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/food_datecha"
            android:layout_margin="8dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:text="유통기한\n" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:text="입고날짜\n"
            android:id="@+id/food_indatecha" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_storagy"
            android:layout_marginLeft="8dp"

            android:text="보관법" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_storagycha"
            android:layout_marginLeft="8dp"

            android:visibility="gone"
            android:text="보관법\n" />

    </LinearLayout>

</LinearLayout>